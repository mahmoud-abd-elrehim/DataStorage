<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iti.mahmoud.datastorage.Storage"
    android:background="#fcfafa">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPsave"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:background="#b7f217"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPselect"
        android:id="@+id/button2"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textAlignment="center"
        android:background="#b7f217" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intsave"
        android:id="@+id/button3"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#b7f217"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intselect"
        android:id="@+id/button4"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="#b7f217" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extsave"
        android:id="@+id/button5"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:textAlignment="center"
        android:background="#b7f217" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extselect"
        android:id="@+id/button6"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="#b7f217" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sqlsave"
        android:id="@+id/button7"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="#b7f217" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sqlselect"
        android:id="@+id/button8"
        android:height="40dp"
        android:width="150dp"
        android:textSize="30dp"
        android:layout_alignTop="@+id/button7"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:textAlignment="center"
        android:background="#b7f217" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:width="250dp"
        android:height="40dp"
        android:background="#e1dada"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:width="250dp"
        android:height="40dp"
        android:background="#e1dada"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
